{
  "name": "lifx-server",
  "version": "1.0.0",
  "description": "LiFX server for HUE control",
  "main": "src/index.js",
  "dependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.2.5",
    "ava": "^1.2.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flow-header": "^0.2.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "flow-bin": "^0.93.0",
    "pre-commit": "^1.2.2",
    "scriba": "^1.0.5",
    "xo": "^0.24.0"
  },
  "scripts": {
    "start": "node ./src",
    "lint": "flow && xo",
    "test": "flow && xo && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stream-dash/lifx-server.git"
  },
  "keywords": [
    "hue",
    "lights",
    "control"
  ],
  "author": "StreamDash",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stream-dash/lifx-server/issues"
  },
  "homepage": "https://github.com/stream-dash/lifx-server#readme",
  "pre-commit": [
    "lint"
  ],
  "xo": {
    "parser": "babel-eslint",
    "space": true,
    "extends": [
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "babel",
      "flowtype",
      "flow-header"
    ],
    "rules": {
      "babel/semi": true,
      "flow-header/flow-header": 2
    },
    "env": [
      "browser",
      "node"
    ],
    "overrides": [
      {
        "files": "test/**/*",
        "rules": {
          "flow-header/flow-header": "off",
          "import/no-unassigned-import": "off"
        }
      }
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ]
  }
}
